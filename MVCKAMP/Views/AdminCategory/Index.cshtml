@using EntityLayer.concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered table-hover ">
    <tr>
        <th class="col-md-2">#</th>
        <th class="col-md-2">Kategori Adı</th>
        <th class="col-md-2">Açıklama</th>
        
        <th>Sil</th>
        <th>Günceller</th>
        <th>Başlıklar</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
         
            <th><a href="/AdminCategory/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></th>

            <th><a href="/AdminCategory/EditCategory/@item.Id" class="btn btn-warning">Güncelle</a></th>

            <th><a href="#" class="btn btn-primary">Başlıklar</a></th>

        </tr>

    }
</table>
@Html.ActionLink("Kategori Ekle", "CategoryAdd","AdminCategory", "", new { @class = "btn btn-dark" })
